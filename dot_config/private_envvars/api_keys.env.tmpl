# =============================================================================
# API Keys - Centralized secrets from 1Password Dotfiles vault
# Sourced by ~/.zshrc - available to all shell processes
# =============================================================================

# -----------------------------------------------------------------------------
# AI / LLM
# -----------------------------------------------------------------------------
export OPENAI_API_KEY="{{ onepasswordRead "op://Dotfiles/OpenAI/credential" }}"
export OPENROUTER_API_KEY="{{ onepasswordRead "op://Dotfiles/OpenRouter-Env/credential" }}"

# -----------------------------------------------------------------------------
# Development Tools
# -----------------------------------------------------------------------------
export FIRECRAWL_API_KEY="{{ onepasswordRead "op://Dotfiles/Firecrawl/credential" }}"
export GITHUB_MCP_TOKEN="{{ onepasswordRead "op://Dotfiles/GitHub MCP Token/credential" }}"

# -----------------------------------------------------------------------------
# Contentful CMS
# -----------------------------------------------------------------------------
export CONTENTFUL_SPACE_ID="{{ onepasswordRead "op://Dotfiles/Contentful/space_id" }}"
export CONTENTFUL_ACCESS_TOKEN="{{ onepasswordRead "op://Dotfiles/Contentful/access_token" }}"
export CONTENTFUL_PREVIEW_TOKEN="{{ onepasswordRead "op://Dotfiles/Contentful/preview_token" }}"

# -----------------------------------------------------------------------------
# Analytics (PostHog)
# -----------------------------------------------------------------------------
export NEXT_PUBLIC_POSTHOG_KEY="{{ onepasswordRead "op://Dotfiles/PostHog Public/key" }}"
export NEXT_PUBLIC_POSTHOG_HOST="{{ onepasswordRead "op://Dotfiles/PostHog Public/host" }}"
export POSTHOG_PERSONAL_KEY="{{ onepasswordRead "op://Dotfiles/PostHog Personal/credential" }}"

# -----------------------------------------------------------------------------
# App-specific (these apps read env vars directly)
# -----------------------------------------------------------------------------
# OpenCommit - uses OCO_API_KEY
export OCO_API_KEY="{{ onepasswordRead "op://Dotfiles/OpenRouter-OpenCommit/credential" }}"

# Intellimmit - uses OPENAI_API_KEY (already exported above)

# Raycast - requires its own config file, can't use env vars
# See: ~/.config/raycast/config.json
