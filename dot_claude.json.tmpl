{
  "autoUpdates": true,
  "theme": "dark-daltonized",
  "autoConnectIde": true,
  "fileCheckpointingEnabled": false,
  "respectGitignore": false,
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ]
    },
    "firecrawl": {
      "command": "npx",
      "args": [
        "-y",
        "firecrawl-mcp"
      ],
      "env": {
        "FIRECRAWL_API_KEY": "{{ onepasswordRead "op://Dotfiles/Firecrawl/credential" }}"
      }
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp",
      "headers": {
        "Authorization": "Bearer {{ onepasswordRead "op://Dotfiles/GitHub MCP Token/credential" }}"
      }
    },
    "lerian": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@lerianstudio/lerian-mcp-server"
      ],
      "env": {}
    }
  },
  "bypassPermissionsModeAccepted": true
}
